<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Face API POC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        @Html.ActionLink("MS Cognitive Services POC", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="navbar-toggler-icon"></span>
            <span class="navbar-toggler-icon"></span>
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Face API", "FaceApi", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item active dropdown">
                    <button type="button" class="btn btn-dark dropdown-toggle" data-toggle="dropdown">Reconocimiento</button>
                    <div class="dropdown-menu" style="width: 90px; background-color: #212529;">
                        <a class="dropdown-item" href='/Home/Reconocimiento'>Acciones</a>
                        <a class="dropdown-item" href='/Home/Listado'>Listado</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <div class="loadingModal"></div>
        <div class="loadingModalReco"></div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Baufest</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/tabulator")
    @Scripts.Render("~/bundles/cognitiveServices")
    @Scripts.Render("~/bundles/reconocimiento")
    @RenderSection("scripts", required: false)    
</body>
</html>
